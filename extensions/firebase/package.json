{
  "name": "firebase-auth",
  "displayName": "Firebase Authentication",
  "description": "Firebase authentication integration for VSCode",
  "version": "0.1.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "firebase",
    "authentication",
    "auth",
    "login",
    "google",
    "github"
  ],
  "activationEvents": [
    "onCommand:firebase-auth.login",
    "onCommand:firebase-auth.logout",
    "onCommand:firebase-auth.showStatus",
    "onUri"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "firebase-auth.login",
        "title": "Firebase: Login",
        "category": "Firebase Auth"
      },
      {
        "command": "firebase-auth.logout",
        "title": "Firebase: Logout",
        "category": "Firebase Auth"
      },
      {
        "command": "firebase-auth.showStatus",
        "title": "Firebase: Show Auth Status",
        "category": "Firebase Auth"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "firebase-auth.login",
          "when": "!firebase-auth.authenticated"
        },
        {
          "command": "firebase-auth.logout",
          "when": "firebase-auth.authenticated"
        },
        {
          "command": "firebase-auth.showStatus"
        }
      ]
    },
    "configuration": {
      "title": "Firebase Authentication",
      "properties": {
        "firebase-auth.apiKey": {
          "type": "string",
          "default": "",
          "description": "Firebase API Key"
        },
        "firebase-auth.authDomain": {
          "type": "string",
          "default": "",
          "description": "Firebase Auth Domain"
        },
        "firebase-auth.projectId": {
          "type": "string",
          "default": "",
          "description": "Firebase Project ID"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@firebase/app": "^0.14.2",
    "@firebase/auth": "^1.11.0",
    "@firebase/firestore": "^4.9.1"
  }
}
